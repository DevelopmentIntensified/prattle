{
  "compilerOptions": {
    "target": "esnext" ,
    "types": [
      "vitest/globals"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/tests",
    "node_modules",
    "**/*.test.ts",
    "**/*.mock.ts"
  ]
}
